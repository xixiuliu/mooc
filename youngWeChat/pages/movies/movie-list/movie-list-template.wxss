/* pages/movies/movie-list/movie-list-template.wxss */
@import "../movie/movie-template.wxss";
.movie-list-container{
    display: flex;
    flex-direction: column;
    background-color: #fff;
    margin-bottom: 30rpx;
    padding-bottom: 30rpx;
}
.movie-head{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 20rpx 22rpx;
}
.slogan{
    flex: 1;
    font-size: 24rpx;
    line-height: 56rpx; 
}
.more{
    flex: 1;
    text-align: right;
     line-height: 54rpx; 
}
.more-text{
    margin-right: 10rpx;
    font-size: 24rpx;
    color: #1f4ba5;
}
.more-img{
    width: 9rpx;
    height: 16rpx;
}
.movies-container{
    display: flex;
    justify-content: space-between;
}